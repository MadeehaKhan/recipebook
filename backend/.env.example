# RecipeBook Backend Configuration
# Copy this file to .env (dev) and .env.prod (production), then customize

# ============================================================================
# Node Environment
# ============================================================================
NODE_ENV=development
# For production: NODE_ENV=production

# ============================================================================
# Express Server
# ============================================================================
PORT=5000

# ============================================================================
# PostgreSQL Configuration
# ============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme
POSTGRES_DB=recipebook
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Optional: Full connection string (will be built from above if not set)
# DATABASE_URL=postgresql://postgres:password@postgres:5432/recipebook

# ============================================================================
# PostgreSQL Connection Pool (optional tuning)
# ============================================================================
PG_POOL_MAX=10
PG_IDLE_TIMEOUT=30000
PG_CONN_TIMEOUT=5000

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGIN=*
# For production: CORS_ORIGIN=https://yourdomain.com

# ============================================================================
# Logging
# ============================================================================
LOG_FORMAT=dev
# For production: LOG_FORMAT=combined
